<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title><% if (page.title) { %>
        <%= page.title + ' - ' + config.title %>
    <% } else{%>
        <%= config.title %>
    <% } %>
    </title>

    <% if (theme.favicon) { %>
        <link rel="shortcut icon" href="<%= theme.favicon %>"/>
    <% } %>

    <%- css('css/normalize.css') %>
    <%- css('css/base.css') %>
    <%- css('css/index.css') %>
    <%- css('css/post.css') %>
    <%- css('css/icon/iconfont.css') %>

    <style>
        :root {
            --highlight-color: <%= theme.palette.highlight %>;
        }
    </style>
</head>
